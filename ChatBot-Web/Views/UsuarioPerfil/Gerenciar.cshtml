@model List<GCMAvantes.Models.ViewModel.GerenciarUsuarioPerfisViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Gerenciar Perfis de usuário</h2>
            Adicionar ou remover perfis de usuário / @ViewBag.UsuarioNome.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].PerfilId" />
                    <input type="hidden" asp-for="@Model[i].PerfilNome" />
                    <input asp-for="@Model[i].Selecionado" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selecionado">
                        @Model[i].PerfilNome
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Index" asp-route-id="@ViewBag.UsuarioId"
               class="btn btn-primary" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>
